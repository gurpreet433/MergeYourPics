<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="50dp"
        android:height="50dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid
                android:color="#D8FFFFFF"/>
            <stroke
                android:width="1dp"
                android:color="@color/colorAccent"/>
        </shape>
    </item>
    <item
        android:width="17dp"
        android:height="4dp"
        android:left="6dp"
        android:top="32dp">
        <rotate
            android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorAccent"/>
            </shape>
        </rotate>
    </item>

    <item
        android:width="34dp"
        android:height="4dp"
        android:top="26dp"
        android:left="13dp">
        <rotate
            android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorAccent"/>
            </shape>
        </rotate>
    </item>

</layer-list>